{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es5",
    "sourceMap": false,
    "baseUrl": "./",
    "rootDir": "./",
    "strict": false,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ES5",
      "es2015.collection",
      "es2015.iterable"
    ]
  },
  "include": [
    "./examples/**/*.ts",
    "./src/**/*.ts",
    "./test/**/*.ts"
 ]
}